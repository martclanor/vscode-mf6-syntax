        {
          "name": "string.mf6",
          "match": "'.*?\\.[a-zA-Z0-9_-]+'|(?:\\b(?!\\d+\\b)|(?:\\.\\./)+)[a-zA-Z0-9_./-]+\\.[a-zA-Z0-9_-]+(?:\\.[a-zA-Z0-9_-]+)*\\b"
        }
      ]
    }
  }
