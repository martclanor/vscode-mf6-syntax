        }
      ]
    },
    "valid": {
      "patterns": [
        {
          "name": "entity.name.function.mf6",
          "match": "(?i)(?<=^|\\s)(amt-hmk|amt-lmk|central|drop|ems6|freundlich|harmonic|ims6|langmuir|linear|linearend|logarithmic|nonlinear|stay|stepwise|stop|tvd|upstream)(?=\\s|$)"
