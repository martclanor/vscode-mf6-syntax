{
  "scopeName": "source.mf6.sim-tdis",
  "patterns": [
    {
      "include": "source.mf6.common"
    },
    {
      "include": "#block"
    },
    {
      "include": "#keyword"
    }
  ],
  "repository": {
    "block": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "(?i)\\b(OPTIONS|DIMENSIONS|PERIODDATA)\\b"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "name": "variable.parameter",
          "match": "(?i)\\b(TIME_UNITS|START_DATE_TIME|ATS6|FILEIN|NPER|PERIODDATA|PERLEN|NSTP|TSMULT)\\b"
        }
      ]
    }
  }
}
