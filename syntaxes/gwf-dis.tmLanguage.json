{
  "scopeName": "source.mf6.gwf-dis",
  "patterns": [
    {
      "include": "source.mf6.common"
    },
    {
      "include": "#block"
    },
    {
      "include": "#keyword"
    }
  ],
  "repository": {
    "block": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "(?i)\\b(OPTIONS|DIMENSIONS|GRIDDATA)\\b"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "name": "variable.parameter",
          "match": "(?i)\\b(LENGTH_UNITS|NOGRB|XORIGIN|YORIGIN|ANGROT|EXPORT_ARRAY_ASCII|EXPORT_ARRAY_NETCDF|NCF6|FILEIN|NLAY|NROW|NCOL|DELR|DELC|TOP|BOTM|IDOMAIN)\\b"
        }
      ]
    }
  }
}
