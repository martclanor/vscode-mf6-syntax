{
  "scopeName": "source.mf6.gwf-npf",
  "patterns": [
    {
      "include": "source.mf6.common"
    },
    {
      "include": "#block"
    },
    {
      "include": "#keyword"
    }
  ],
  "repository": {
    "block": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "(?i)\\b(OPTIONS|GRIDDATA)\\b"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "name": "variable.parameter",
          "match": "(?i)\\b(SAVE_FLOWS|PRINT_FLOWS|ALTERNATIVE_CELL_AVERAGING|THICKSTRT|CVOPTIONS|VARIABLECV|DEWATERED|PERCHED|REWET_RECORD|REWET|WETFCT|IWETIT|IHDWET|XT3DOPTIONS|XT3D|RHS|SAVE_SPECIFIC_DISCHARGE|SAVE_SATURATION|K22OVERK|K33OVERK|TVK6|FILEIN|EXPORT_ARRAY_ASCII|EXPORT_ARRAY_NETCDF|DEV_NO_NEWTON|DEV_OMEGA|ICELLTYPE|K|K22|K33|ANGLE1|ANGLE2|ANGLE3|WETDRY)\\b"
        }
      ]
    }
  }
}
