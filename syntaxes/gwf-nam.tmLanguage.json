{
  "scopeName": "source.mf6.gwf-nam",
  "patterns": [
    {
      "include": "source.mf6.common"
    },
    {
      "include": "#block"
    },
    {
      "include": "#keyword"
    }
  ],
  "repository": {
    "block": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "(?i)\\b(OPTIONS|PACKAGES)\\b"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "name": "variable.parameter",
          "match": "(?i)\\b(LIST|PRINT_INPUT|PRINT_FLOWS|SAVE_FLOWS|NEWTON|UNDER_RELAXATION|FTYPE|FNAME|PNAME|DIS6|DISV6|DISU6|IC6|OC6|NPF6|STO6|CSUB6|BUY6|HFB6|CHD6|WEL6|DRN6|RIV6|GHB6|RCH6|EVT6|MAW6|SFR6|LAK6|UZF6|MVR6|GNC6|OBS6)\\b"
        }
      ]
    }
  }
}
