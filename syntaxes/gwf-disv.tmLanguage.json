{
  "scopeName": "source.mf6.gwf-disv",
  "patterns": [
    {
      "include": "source.mf6.common"
    },
    {
      "include": "#block"
    },
    {
      "include": "#keyword"
    }
  ],
  "repository": {
    "block": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "(?i)\\b(OPTIONS|DIMENSIONS|GRIDDATA|VERTICES|CELL2D)\\b"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "name": "variable.parameter",
          "match": "(?i)\\b(LENGTH_UNITS|NOGRB|XORIGIN|YORIGIN|ANGROT|EXPORT_ARRAY_ASCII|EXPORT_ARRAY_NETCDF|NCF6|FILEIN|NLAY|NCPL|NVERT|TOP|BOTM|IDOMAIN|IV|XV|YV|ICELL2D|XC|YC|NCVERT|ICVERT)\\b"
        }
      ]
    }
  }
}
